{
    "manifest_version": 3,
    "name": "AI 提示詞管理助手",
    "version": "1.0.0",
    "description": "方便地儲存、管理、搜尋、使用及分享 AI 提示詞。",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "storage",
      "sidePanel",
      "activeTab",
      "scripting",
      "downloads",
      "contextMenus"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
      },
      "default_title": "開啟 AI 提示詞助手"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
     "background": {
      "service_worker": "background.js"
    }
  }